<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondooo"
    tools:context=".CalculadoraFragment">

    <EditText
        android:id="@+id/txtNro1"
        android:layout_width="407dp"
        android:layout_height="51dp"
        android:layout_marginStart="-0dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="150dp"
        android:background="#8DFFFFFF"
        android:ems="10"
        android:hint="Ingrese numero 1"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00BCD4"
        android:textColorHint="#804B4B"
        android:textColorLink="#009688"
        android:textSize="24sp"

        />

    <EditText
        android:id="@+id/txtNro2"
        android:layout_width="407dp"
        android:layout_height="51dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="150dp"
        android:background="#8FFFFFFF"
        android:ems="10"
        android:hint="Ingrese numero 2"
        android:inputType="numberDecimal"
        android:textColor="#B85353"
        android:textColorHighlight="#00BCD4"
        android:textColorHint="#804B4B"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="260dp"
        android:background="@color/black"
        android:clickable="true"
        android:onClick="Sumar"
        android:text="+"
        android:textColorHint="#00BCD4"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="260dp"
        android:background="@color/black"
        android:onClick="Restar"
        android:text="-"
        android:textColorHighlight="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textColorLink="#00BCD4"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="260dp"
        android:background="@color/black"
        android:onClick="Dividir"
        android:text="/"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="260dp"
        android:background="@color/black"
        android:onClick="Multiplicar"
        android:text="*"
        android:textColorHint="#00BCD4"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="330dp"
        android:background="@color/black"
        android:onClick="Raiz"
        android:text="√ "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvRespuesta"
        android:layout_width="382dp"
        android:layout_height="64dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="150dp"
        android:background="#25A0AF"
        android:text="Respuesta"
        android:textColor="#151414"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="330dp"
        android:background="@color/black"
        android:onClick="Seno"
        android:text="Sen"

        android:textSize="24sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="330dp"
        android:background="@color/black"
        android:onClick="Coseno"
        android:text="Cos"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="330dp"
        android:background="@color/black"
        android:onClick="Tangente"
        android:text="Tan"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="400dp"
        android:background="@color/black"
        android:onClick="Factorial"
        android:text="¡"
        android:textColorHint="#00BCD4"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="400dp"
        android:background="@color/black"
        android:onClick="Potencia"
        android:text="X^N"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="400dp"
        android:background="@color/black"
        android:onClick="Limpiar"
        android:text="RND"
        android:textColorHint="#4E3232"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="500dp"
        android:background="@color/black"
        android:onClick="Limpiar"
        android:text="Limpiar"
        android:textColorHint="#4E3232"
        android:textSize="20sp" />

</FrameLayout>